#temperature.critical {
    color: #e92d4d;
}

#workspaces {
    padding-right: 0px;
}
#window {
    border-radius: 5px;
    margin-left: 20px;
    margin-right: 20px;
}

#custom-launch_firefox, 
#custom-launch_thunderbird,
#custom-launch_thunar,
#custom-launch_kitty,
#custom-weather {
    margin-left: 0px;
    border-right: 0px;
    font-size: 24px;
    margin-right: 20px;
}

#custom-launch_rofi {
    font-size: 25px;
}

#custom-launch_firefox, 
#custom-launch_kitty {
    font-size: 20px;
}

tooltip {
    background: #F5E6DA;
    opacity: 1;
    border-radius: 5px;
    border-width: 1px;
    border-style: solid;
    border-color: #34344b;
    color:#7C4A31;
}

tooltip label{
    color: #7C4A31;
}

#custom-notification {
  font-family: "NotoSansMono Nerd Font";
}
