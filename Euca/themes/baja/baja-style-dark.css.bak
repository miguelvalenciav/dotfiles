* {
    border: none;
    border-radius: 10px;
    font-family: "Avenir-Medium";
    font-weight: normal;
}

window#waybar{
    background: transparent;
}

window#waybar *.module:hover{
    color:  #615147;
}

window#waybar.left-bar {
    font-size: 25px;
    color:#7C4A31;
}

window#waybar.left-bar *.module {
    padding: 5px;
    background-color: rgba(255, 245, 235, 0.6);
}

window#waybar.top-bar {
    font-size: 25px;
    color:#7C4A31;
}

window#waybar.top-bar *.module {
    padding: 5px;
    background-color: rgba(255, 245, 235, 0.6);
}

#workspaces button {
    color:#7C4A31;
    font-weight: bold;
}

#workspaces button.active {
    color: #F5E6DA;
    background: #615147;
    border-radius: 5px;
}

#workspaces button:hover {
    background: #B15638;
    color: #F5E6DA;
    border-radius: 5px;
}

